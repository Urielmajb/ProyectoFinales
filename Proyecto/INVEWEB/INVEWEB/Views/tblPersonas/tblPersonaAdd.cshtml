@model DAL.tblPersonas

@{ ViewBag.Title = "tblPersonaAdd";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
